/* pages/home/home.wxss */

.btn-box {
  display: flex;
  justify-content: space-around;
  position: absolute;
  width: 100%;
  bottom: 30px;
  opacity: 0.7;
  z-index: 10000;
}

.btn-box .image-ele {
  width: 50px;
  height: 50px;
}

.reChoose {
  position: fixed;
  bottom: 66rpx;
  left: 50%;
  transform: translateX(-50%);
  background-color: green !important;
  color: #fff !important;
  border-radius: 10%;
}

.info_box {
  position: absolute;
  display: flex;
  flex-flow: row wrap;
  align-content: space-around;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  background-color: rgba(201, 218, 218, 0.7);
  width: 80%;
  height: 100px;
  font-size: 40rpx;
}

.info_row {
  display: flex;
  width: 100%;
  justify-content: space-around;
  text-align: left;
  margin-left: 55rpx;
}

.info_row text {
  flex: 1;
}
